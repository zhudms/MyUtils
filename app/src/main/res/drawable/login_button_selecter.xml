<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/max_radio_size"></corners>
            <solid android:color="@color/login_button_pressed"></solid>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/max_radio_size"></corners>
            <solid android:color="@color/login_button_pressed"></solid>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/max_radio_size"></corners>
            <solid android:color="@color/login_button"></solid>
        </shape>
    </item>

</selector>
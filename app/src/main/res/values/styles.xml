<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="match">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="text_normal" parent="wrap">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="text_small" parent="wrap">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="text_mini" parent="wrap">
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:textSize">@dimen/text_mini</item>
    </style>

    <style name="text_button" parent="wrap">
        <item name="android:textSize">@dimen/text_button</item>
    </style>

    <style name="text_small_black" parent="text_small">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_small_gray" parent="text_small">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text_normal_black" parent="text_normal">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="text_normal_gray" parent="text_normal">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="text_normal_withable" parent="text_normal">
        <item name="android:textColor">@color/patient_add_textcolor</item>
    </style>

    <style name="text_small_withable" parent="text_small">
        <item name="android:textColor">@color/patient_add_textcolor</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:background">@color/app_divider_color</item>
    </style>

    <style name="arrow_style">
        <item name="android:layout_width">@dimen/arrow_size</item>
        <item name="android:layout_height">@dimen/arrow_size</item>
        <item name="android:src">@drawable/my_more</item>
        <item name="android:layout_gravity">center</item>

    </style>


    <style name="commonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/flip_indicator_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="actionbar_icon">
        <item name="android:layout_width">@dimen/actionbar_iconhight</item>
        <item name="android:layout_height">@dimen/actionbar_iconhight</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>

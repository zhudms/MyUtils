<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"

    android:layout_height="wrap_content"
    android:background="@color/app_white"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <!--android:minHeight="175dp"-->
    <TextView
        android:id="@+id/dialog_title"
        style="@style/text_small_black"
        android:minWidth="275dp"
        android:paddingLeft="@dimen/app_pagepadding"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dialog_text_margin"
        tools:text="dfsafd"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_message"
        style="@style/text_small_black"
        android:paddingLeft="@dimen/app_pagepadding"
        android:paddingRight="@dimen/app_pagepadding"

        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dialog_text_margin"
        android:gravity="left"
        tools:text="删除" />


    <EditText
        android:id="@+id/dialog_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:maxLength="100"
        android:layout_marginBottom="@dimen/dialog_text_margin"
        android:layout_marginLeft="@dimen/dialog_padding"
        android:layout_marginRight="@dimen/dialog_padding"
        android:background="@drawable/hollow_roundconner_gray"
   />

    <TextView style="@style/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_hight"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel"
            style="@style/double_button_style"
            android:text="@string/cancel" />

        <TextView
            android:layout_width="@dimen/min_size"
            android:layout_height="match_parent"
            android:background="@color/app_divider_color" />

        <Button
            android:id="@+id/dialog_confirm"
            style="@style/double_button_style"
            android:text="@string/confirm" />


    </LinearLayout>
</LinearLayout>